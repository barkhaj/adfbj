{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "az-dev-adfbj"
		},
		"blob_store_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'blob_store'"
		},
		"sql_database_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'sql_database'"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/blob_store')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('blob_store_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/sql_database')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"connectionString": "[parameters('sql_database_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/DestinationDataset_ef4')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "sql_database",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "id",
						"type": "int",
						"precision": 10,
						"scale": 0
					},
					{
						"name": "tdate",
						"type": "date",
						"precision": 10,
						"scale": 0
					},
					{
						"name": "amount",
						"type": "decimal",
						"precision": 18,
						"scale": 0
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "transactions"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/sql_database')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SourceDataset_ef4')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "blob_store",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"folderPath": "data",
						"container": "adf-data"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "tdate",
						"type": "String"
					},
					{
						"name": "amount",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/blob_store')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Json1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "blob_store",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Json",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation"
					}
				},
				"schema": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"properties": {
							"type": "object",
							"properties": {
								"structure": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"name": {
												"type": "string"
											},
											"type": {
												"type": "string"
											}
										}
									}
								},
								"published": {
									"type": "boolean"
								},
								"type": {
									"type": "string"
								},
								"linkedServiceName": {
									"type": "string"
								},
								"typeProperties": {
									"type": "object",
									"properties": {
										"folderPath": {
											"type": "string"
										},
										"fileName": {
											"type": "string"
										},
										"format": {
											"type": "object",
											"properties": {
												"type": {
													"type": "string"
												},
												"columnDelimiter": {
													"type": "string"
												},
												"firstRowAsHeader": {
													"type": "boolean"
												}
											}
										},
										"partitionedBy": {
											"type": "array",
											"items": {
												"type": "object",
												"properties": {
													"name": {
														"type": "string"
													},
													"value": {
														"type": "object",
														"properties": {
															"type": {
																"type": "string"
															},
															"date": {
																"type": "string"
															},
															"format": {
																"type": "string"
															}
														}
													}
												}
											}
										}
									}
								},
								"availability": {
									"type": "object",
									"properties": {
										"frequency": {
											"type": "string"
										},
										"interval": {
											"type": "integer"
										}
									}
								},
								"external": {
									"type": "boolean"
								},
								"policy": {
									"type": "object",
									"properties": {}
								}
							}
						}
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/blob_store')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/daily_gamedata_csv')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "blob_store",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Json",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "{Day}.csv",
						"folderPath": "gamedata/{Year}/{Month}",
						"container": "adf-data"
					}
				},
				"schema": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"properties": {
							"type": "object",
							"properties": {
								"structure": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"name": {
												"type": "string"
											},
											"type": {
												"type": "string"
											}
										}
									}
								},
								"published": {
									"type": "boolean"
								},
								"type": {
									"type": "string"
								},
								"linkedServiceName": {
									"type": "string"
								},
								"typeProperties": {
									"type": "object",
									"properties": {
										"folderPath": {
											"type": "string"
										},
										"fileName": {
											"type": "string"
										},
										"format": {
											"type": "object",
											"properties": {
												"type": {
													"type": "string"
												},
												"columnDelimiter": {
													"type": "string"
												},
												"firstRowAsHeader": {
													"type": "boolean"
												}
											}
										},
										"partitionedBy": {
											"type": "array",
											"items": {
												"type": "object",
												"properties": {
													"name": {
														"type": "string"
													},
													"value": {
														"type": "object",
														"properties": {
															"type": {
																"type": "string"
															},
															"date": {
																"type": "string"
															},
															"format": {
																"type": "string"
															}
														}
													}
												}
											}
										}
									}
								},
								"availability": {
									"type": "object",
									"properties": {
										"frequency": {
											"type": "string"
										},
										"interval": {
											"type": "integer"
										}
									}
								},
								"external": {
									"type": "boolean"
								},
								"policy": {
									"type": "object",
									"properties": {}
								}
							}
						}
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/blob_store')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Wizard Copy')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy_ef4",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "adf-data/data/"
							},
							{
								"name": "Destination",
								"value": "dbo.transactions"
							}
						],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": false,
									"wildcardFileName": "*.*"
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings",
									"skipLineCount": 0
								}
							},
							"sink": {
								"type": "AzureSqlSink"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "tdate",
											"type": "String"
										},
										"sink": {
											"name": "tdate",
											"type": "DateTime"
										}
									},
									{
										"source": {
											"name": "amount",
											"type": "String"
										},
										"sink": {
											"name": "amount",
											"type": "Decimal"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "SourceDataset_ef4",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationDataset_ef4",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SourceDataset_ef4')]",
				"[concat(variables('factoryId'), '/datasets/DestinationDataset_ef4')]"
			]
		}
	]
}